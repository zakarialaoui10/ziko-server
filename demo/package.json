{
    "name": "ssr-test",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "node src/.entries/server.js",
        "build:client": "cross-env TARGET=client vite build",
        "build:server": "cross-env TARGET=server vite build",
        "build:static": "cross-env TARGET=static vite build",
        "build:ssr": "npm run build:client && npm run build:server",
        "build:mixed" : "npm run build:ssr && npm run build:static",
        "preview:ssr": "cross-env NODE_ENV=production node src/.entries/server.js",
        "preview:mixed": "vite preview --outDir dist"

    },
    "dependencies": {
        "vite": "^6.0.7"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "vite-plugin-ssr": "^0.4.85"
    }
}
